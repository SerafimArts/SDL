{
    "name": "serafim/ffi-sdl",
    "description": "PHP FFI to SDL2 bindings",
    "type": "library",
    "license": "MIT",
    "support": {
        "issues": "https://github.com/SerafimArts/ffi-sdl/issues",
        "source": "https://github.com/SerafimArts/ffi-sdl"
    },
    "keywords": [
        "sdl",
        "ffi",
        "bindings",
        "opengl",
        "graphics",
        "library",
        "direct media"
    ],
    "homepage": "https://github.com/SerafimArts/ffi-sdl",
    "authors": [
        {
            "name": "Kirill Nesmeyanov",
            "email": "nesk@xakep.ru"
        }
    ],
    "require": {
        "php": ">=7.4",
        "ext-ffi": "*",
        "serafim/flux": "^1.0",
        "serafim/ffi-loader": "^2.0",
        "symfony/polyfill-php80": "^1.18"
    },
    "autoload": {
        "psr-4": {
            "Serafim\\SDL\\": "src"
        },
        "files": [
            "src/bootstrap.php"
        ]
    },
    "require-dev": {
        "phpunit/phpunit": "^9.0",
        "symfony/var-dumper": "^5.0",
        "vimeo/psalm": "^3.17",
        "serafim/ffi-ide-helper": "^1.0"
    },
    "autoload-dev": {
        "psr-4": {
            "Serafim\\SDL\\Tests\\": "tests"
        }
    },
    "scripts": {
        "check": "psalm"
    },
    "config": {
        "sort-packages": true
    },
    "extra": {
        "branch-alias": {
            "dev-master": "2.0.x-dev"
        }
    },
    "minimum-stability": "dev",
    "prefer-stable": true
}
